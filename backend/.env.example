# Application
APP_NAME=Football Live Score API
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://admin:password@localhost:5432/football_db

# Database - MongoDB
MONGO_URI=mongodb://admin:password@localhost:27017
MONGO_DB_NAME=football_live

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1
REDIS_CELERY_DB=2

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Crawling Configuration
CRAWL_LIVE_SCORES_INTERVAL=30
CRAWL_MATCH_EVENTS_INTERVAL=10
CRAWL_FIXTURES_HOUR=2
CRAWL_LEAGUE_TABLES_INTERVAL=3600

# Proxy Configuration (Optional)
USE_PROXY=False
PROXY_PROVIDER=scraperapi
PROXY_API_KEY=your-proxy-api-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
